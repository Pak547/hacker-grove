<div class="login-card m-5">
    <form class="login-form">
        <div class="row mb-3">
            <label for="email-login" class="col-sm-2 col-form-label ">Email:</label>
            <div class="col-sm-10">
                <input type="email" class="form-control " id="email-login">
            </div>
        </div>
        <div class="row mb-3">
            <label for="password-login" class="col-sm-2 col-form-label ">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password-login">
            </div>
        </div>
        <button type="submit" id="loginBtn" class="btn btn-lg">Login</button>
    </form>
    <a class="btn my-3" href="./forgotPassword" role="button" id="forgotPasswordBtn">Forgot Password</a>
</div>
<script src="/js/login.js"></script>