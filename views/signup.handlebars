<div class="signup-card">
    <form class="signup-form m-2">
        <div class="mb-3 mx-3 row">
            <label for="email-signup" class="col-9 col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email-signup" placeholder="email@example.com">
            </div>
        </div>
        <div class="mb-3 mx-3 row">
            <label for="username-signup" class="col-9 col-sm-2 col-form-label">Username:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username-signup">
            </div>
        </div>
        <div class="mb-3 mx-3 row">
            <label for="password-signup" class="col-9 col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password-signup" aria-describedby="passwordHelpBlock">
            </div>
            <div id="passwordHelpBlock" class="form-text">
                Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces,
                special characters, or emoji.
            </div>
        </div>
        <button class="btn btn-lg m-2" type="submit" id="signupBtn">Sign up</button>
    </form>
</div>